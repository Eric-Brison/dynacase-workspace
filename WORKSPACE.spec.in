%define apachedir /etc/httpd
%define destdir /home/httpd/what

Summary: The Work Space to exchange files
Name: @PACKAGE@
Version: @VERSION@
Release: @RELEASE@
License: GPL
Group: Applications/Web
Source: ftp://ftp.souillac.anakeen.com/pub/anakeen/%{name}-%{version}.tar.gz
# post-2.2.0 fix (can go away with next release):
Vendor: Anakeen           
URL: http://www.anakeen.com/
Packager: Yannick Le Briquer <yannick.lebriquer@anakeen.com>
BuildArchitectures: noarch
BuildRoot: /tmp/anakeen-root
Requires: php >= 4.0.5
Requires: apache >= 1.3.12
Requires: postgresql >= 7.0.0
Requires: php-pgsql >= 4.0.2
Requires: FREEDOM-LIB >= 0.2.3
Prereq: WHAT 
Prereq: php-cgi 
Prereq: gettext


%description
The Roaming application is use to manage external connection via VPN




%prep
%setup -q -n %{name}-%{version}

%build

%install
autoconf
./configure --with-pubrule=`pwd`
make  pubdir=$RPM_BUILD_ROOT%{destdir} 

%clean
[ "$RPM_BUILD_ROOT" != "/" ] && rm -rf $RPM_BUILD_ROOT

%post
cd %{destdir}/FDL 
ln -sf ../@PACKAGE@/Method*php .
%{destdir}/wstop




%preun
%postun
%{destdir}/wstop



%files
%defattr(-,root,root)
%dir %{destdir}/%{name}
%{destdir}/%{name}/*
#%{destdir}/locale/*



